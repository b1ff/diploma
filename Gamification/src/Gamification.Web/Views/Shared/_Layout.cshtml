<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @*<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/themes/bootstrap/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/UserStyles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.19.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/userscripts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $.extend($.ui.dialog.prototype.options, {
            modal: true,
            resizable: false,
            draggable: true,
            autoOpen: false,
            width: 500
        });

        $(function () {
            $('.dropdown-toggle').dropdown();
        });
    </script>
</head>
<body>
    <div class="page container">
        <header>
            <div class="navbar">
              <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="#">Gamification</a>
                    <ul id="menu" class="nav">
                        <li @(Html.ActiveClassIf(Request.IsCurrentAction("Home", "Index")))>@(Html.ActionLink<HomeController>(x => x.Index(), "Home"))</li>
                        <li @(Html.ActiveClassIf(Request.IsCurrentAction("Home", "About")))>@(Html.ActionLink<HomeController>(x => x.About(), "About"))</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li @Html.ActiveClassIf(Request.IsCurrentArea("ProjectsControlPanel"))>@(Html.ActionLink<ProjectsController>(x => x.Index(), "Your Projects"))</li>
                        }
                    </ul>
                    @Html.Partial("_LogOnPartial")
                </div>
              </div>
            </div>
        </header>
        <section id="main" class="clear">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
